<h1>Login </h1>

{{#if failedToLogin}}
<p>Wrong credentials!</p>
{{/if}}
<section class="login-page-section">
    <form action="/login" method="POST">

        <div>
            Username: <input type="text" name="username">
        </div>

        <div>
            Password: <input type="password" name="password">
        </div>
        <input type="submit" value="Login">

    </form>
</section>