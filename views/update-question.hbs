<h1>Update Question</h1>
{{#if errorMessages.length}}
<p>Couldn't update the question because:</p>
<ul>
    {{#each errorMessages}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}
<section class="center-form">
    <form method="POST">
        <div>
            <input type="text" name="name" value="{{question.name}}">
        </div>
        <div>
            <input type="text" name="email" value="{{question.email}}">
        </div>
        <div>
            <input type="text" name="question" value="{{question.question}}">
        </div>
        <input type="submit" value="Update Question">
    </form>
</section>