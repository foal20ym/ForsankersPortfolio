{{> errors }}
{{#if projects.length}}
<section class="projects-page-section">
    <div class="projects-page-row">
        <h1 class="projects-page-title">
            Here are some of my projects
        </h1>
        <ul class="projects-page-list">
            {{#each projects}}
            <li class="projects-page-project">
                <img src="{{image}}" alt="" class="projects-page-project-image" />
                <h3 class="projects-page-project-title">
                    <a href="/projects/{{projectID}}">{{title}}</a>
                </h3>
                <p class="projects-page-project-description"> {{description}}</p>
            </li>
            {{/each}}
        </ul>
    </div>
</section>
{{else}}
<p> There is currently no projects to display. </p>
{{/if}}