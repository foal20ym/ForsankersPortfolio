{{#if errorMessages.length}}
<p>Couldn't add question bacause: </p>
<ul>
    {{#each errorMessages}}
    <li> {{this}} </li>
    {{/each}}
</ul>
{{/if}}
<section class="add-question-section">
<h1>Add question</h1>
    <form method="POST" action="/add-question">
        <div>
            Name: <input type="text" name="name" placeholder="Name">
        </div>
        <div>
            Email: <input type="Email" name="email" placeholder="Email">
        </div>
        <div>
            Question: <input type="text" name="question" placeholder="Question">
        </div>
        <input type="submit">
    </form>

</section>