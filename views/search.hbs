{{#if errorMessages}}
	{{> errors}}
{{else}}
{{#if resultsExist}}
<ul class="searchResultsList">
	{{#if projectsResults}}
		<h1>Projects that might match your search</h1>
	{{#each projectsResults}}
	<li>
		<img src="{{image}}" alt="" class="projectsPageProjectImage" />
		<a href="/projects/{{projectID}}">{{title}}</a>
		<p class="projectsPageProjectDescription"> {{description}}</p>
	</li>
	{{/each}}
	{{/if}}
	{{#if questionsResults}}
		<h1>Questions that might match your search</h1>
	{{#each questionsResults}}
	<li>
		<p class="SearchResultsPageQuestion">Q: {{this.question}}</p>
		<p class="SearchResultsPageQuestion">From: {{name}}, {{date}}</p>
		<p class="SearchResultsPageAnswer">{{#if answer}} A: {{answer}} {{/if}}</p>
	</li>
	{{/each}}
	{{/if}}
	{{#if commentsResults}}
		<h1>Comments that might match your search</h1>
	{{#each commentsResults}}
	<li>
		<p>{{this.comment}}</p>
	</li>
	{{/each}}
	{{/if}}
</ul>
{{else}}
	<h1>No results for your search</h1>
{{/if}}
{{/if}}